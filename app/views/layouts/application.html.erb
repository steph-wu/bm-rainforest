<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header><%= link_to 'KLEI ENTERTAINMENT STORE', products_path %></header>

<main>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p><br />
  <% end %>
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p><br />
  <% end %>

  <%= yield %>
</main>

<footer>
  &copy; KLEI ENTERTAINMENT
</footer>

</body>
</html>
