<section class="product">

  <p><%= link_to image_tag(product.image), product %></p>

  <div class="product_desc">
    <h2><%= link_to product.name, product %></h2>
    <h3>Price: $<%= product.price_in_cents / 100 %></h3>
    <br>
    <p>Description: <%= product.description %></p>
  </div>

</section>
