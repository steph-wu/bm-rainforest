<div class="form">

  <%= form_for product do |f| %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :price_in_cents, 'Price' %>
      <%= f.text_field :price_in_cents %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>

  <% end %>

</div>
